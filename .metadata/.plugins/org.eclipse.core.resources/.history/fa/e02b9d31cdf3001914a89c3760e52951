package com.batch2;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;
import org.springframework.stereotype.Repository;

@Repository
public interface LoginRegisterRepository extends CrudRepository<Login, Integer>,JpaRepository<Login, Integer>{

	@Query("select l.username from Login l where username = ?1 and password = ?2 ")
	String authentication(String username, String password);
	@Query("update Login l where  username = ?1 ")
	

}
